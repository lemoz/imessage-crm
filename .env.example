# Environment Configuration for iMessage CRM
# Copy this file to .env and update with your actual values

# OpenAI Configuration (Optional - for AI features)
OPENAI_API_KEY=your_openai_api_key_here

# Database Configuration
# Note: iMessage database is automatically detected at ~/Library/Messages/chat.db
# Override only if you need a custom path
# IMESSAGE_DB_PATH=/custom/path/to/chat.db

# Application Configuration
# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Rate limiting for message sending
RATE_LIMIT_MESSAGES_PER_MINUTE=10
RATE_LIMIT_MIN_DELAY_SECONDS=1.0

# Contact enrichment settings
ENABLE_CONTACT_ENRICHMENT=true
MAX_CONTACT_MERGE_SUGGESTIONS=5

# Search configuration
SEARCH_HISTORY_MAX_ENTRIES=1000

# Security Settings
# Set to true in production to enforce stricter security checks
STRICT_PERMISSIONS_CHECK=false